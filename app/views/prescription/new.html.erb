<h2>Add a prescription.</h2>
<% if @prescription.errors.any? %>

    <p class="error" style="font-weight: bold">Your prescription was not saved.</p>
    <ul>
      <% @prescription.errors.full_messages.each do |error| %>
        <li class="error"><%= error%></li>
      <% end %>
    </ul>
<% end %>

<%= form_for @prescription, url: patient_prescription_path(patient_id: @patient.id) do |f| %>

    <%= f.label :medication %>
    <%= f.collection_select(:medication_id, @medictions, :id, :name, include_blank: true) %><br>

    <%= f.submit %>

<% end %>